
<% @teams.in_groups_of(2, false).each do |group| %>
  <div class="columns">
    <% group.each do |team| %>
      <div class="column is-half">
        Team name: <%= team.name %>
        <br>
        Host: <%= team.user.first_name %>
        <br>
        Teammate: <%= team.teammate.first_name %>
      </div>
    <% end %>
  </div>
<% end %>