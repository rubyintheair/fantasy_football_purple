Name of game: <%= @game_item.name %><br>
Question: <%= @game_item.question %><br><br>
<% count = 0 %>
<%= form_for @game do |f| %>
  <% GameItem::ANSWERS.each do |answer| %>
    <% count += 1 %>
    <%= f.radio_button :answer, count %>
    <%= answer %><br>
  <% end %>
  <br>
  <%= f.submit "Submit", class: "button is-primary" %>
<% end %>


