Name of game: <%= @game_item.name %><br>
Question: <%= @game_item.question %><br><br>
<%= form_for @game do |f| %>
  <% GameItem::ANSWERS.each_with_index do |answer, index| %>
    <%= f.radio_button :answer, index %>
    <%= answer %><br>
  <% end %>
  <br>
  <%= f.submit "Submit", class: "button is-primary" %>
<% end %>


