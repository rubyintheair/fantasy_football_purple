
<div class="card">
  <%= form_for @game do |f| %>
    <div class="card-header">
      <div class="card-header-title">
      Name: <%= @game_item.name %><br>
      </div>
    </div>
    Question: <%= @game_item.question %><br><br>
    <% GameItem::ANSWERS.each_with_index do |answer, index| %>
      <%= f.radio_button :answer, index %>
      <%= answer %><br>
    <% end %>
    <br>
    <%= f.submit "Submit", class: "button is-primary" %><br>
  <% end %>
</div>

