<h1>This is all Users path. <br>Find me in Users Controller, action index</h1>
<br>

<% @users.in_groups_of(2, false).each do |group| %>
  <div class="columns">
    <% group.each do |user| %>
      <div class="column is-half">
        First name: <%= user.first_name %>
        <br>
        Last name: <%= user.last_name %>
        <%= form_for User.find_by(id: session[:user_id]).teamplays.build(teammate: user) do |f| %>
          <%= f.text_field :name, placeholder: "Team's name"%>
          <%= f.hidden_field :teammate_id %>
          <button class="button is-small">Add Teammate</button>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>

