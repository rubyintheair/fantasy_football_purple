
<div>
  <%= form_tag login_path do %>
    <div class="field">
      <%= text_field_tag :email, params[:email], placeholder: "Email" %>
    </div>
    <div class="field">
      <%= password_field_tag :password, nil, placeholder: "Password" %>
    </div>
    <div>
      <%= submit_tag "Log in", class: "button is-primary" %>
    </div>
  <% end %>
</div>
